rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // Helper Functions
    // ========================================
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isBidTicketSpend() {
      return resource.data.bidTickets != null && (
        (
          resource.data.bidTickets.keys().hasAny(['general'])
          && request.resource.data.bidTickets.general == resource.data.bidTickets.general - 1
          && (
            !resource.data.bidTickets.keys().hasAny(['service'])
            || request.resource.data.bidTickets["service"] == resource.data.bidTickets["service"]
          )
        ) || (
          resource.data.bidTickets.keys().hasAny(['service'])
          && request.resource.data.bidTickets["service"] == resource.data.bidTickets["service"] - 1
          && (
            !resource.data.bidTickets.keys().hasAny(['general'])
            || request.resource.data.bidTickets.general == resource.data.bidTickets.general
          )
        )
      );
    }

    function isTicketSpend() {
      let diff = request.resource.data.diff(resource.data).affectedKeys();

      return (diff.hasOnly(['points'])
        && request.resource.data.points is number
        && (resource.data.points is number
          ? request.resource.data.points <= resource.data.points
          : true)
        && request.resource.data.points >= 0)
      || (diff.hasOnly(['serviceTickets'])
        && request.resource.data.serviceTickets is number
        && (resource.data.serviceTickets is number
          ? request.resource.data.serviceTickets <= resource.data.serviceTickets
          : true)
        && request.resource.data.serviceTickets >= 0)
      || (diff.hasOnly(['bidTickets']) && isBidTicketSpend());
    }

    // ========================================
    // Customer Users
    // ========================================
    match /customerUsers/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['points', 'tier', 'status'])
      ) || isAdmin();
      allow delete: if isAdmin();
    }

    // ========================================
    // Partner Users (SSOT: bid tickets/subscriptionStatus)
    // ========================================
    match /partnerUsers/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'businessVerified', 'verificationStatus', 'grade',
          'subscriptionStatus', 'subscriptionPlan', 'subscriptionEndDate',
          'points', 'serviceTickets', 'bidTickets'
        ])
      ) || (isOwner(userId) && isTicketSpend()) || isAdmin();
      allow delete: if isAdmin();
    }

    // ========================================
    // Partners (공개 프로필)
    // ========================================
    match /partners/{partnerId} {
      allow get: if signedIn() || resource.data.isActive == true;
      allow list: if signedIn() || true;
      allow create: if isOwner(partnerId);
      allow update: if (isOwner(partnerId) &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['points', 'subscription'])
      ) || isAdmin();
      allow delete: if isAdmin();

      match /photos/{photoId} {
        allow read: if isOwner(partnerId)
          || isAdmin()
          || get(/databases/$(database)/documents/partners/$(partnerId)).data.isActive == true
          || get(/databases/$(database)/documents/partnerAds/$(partnerId)).data.active == true;
        allow write: if false;
      }
    }

    // ========================================
    // Partner Ads
    // ========================================
    match /partnerAds/{adId} {
      allow read: if resource.data.active == true;
      allow create: if isAdmin()
        || (signedIn() && request.resource.data.partnerId == request.auth.uid);
      allow update: if signedIn() && (resource.data.partnerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // ========================================
    // Home Banners
    // ========================================
    match /homeBanners/{bannerId} {
      allow read: if isAdmin() || resource.data.active == true;
      allow create, update, delete: if isAdmin();
    }

    // ========================================
    // Partner Verifications
    // ========================================
    match /partnerVerifications/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'status', 'rejectReason', 'reviewedAt', 'reviewedBy'
        ])
      ) || isAdmin();
      allow delete: if isAdmin();
    }

    // ========================================
    // Billing / Points (Admin-only write)
    // ========================================
    match /partnerPayments/{partnerId}/items/{itemId} {
      allow read: if isOwner(partnerId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /partnerPointLedger/{partnerId}/items/{itemId} {
      allow read: if isOwner(partnerId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /partnerPointOrders/{partnerId}/orders/{orderId} {
      allow read: if isOwner(partnerId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // ========================================
    // Support Tickets
    // ========================================
    match /supportTickets/{ticketId} {
      allow read: if signedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if (signedIn() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['subject', 'updatedAt'])
      ) || isAdmin();
      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read: if signedIn() && (
          get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId == request.auth.uid || isAdmin()
        );
        allow create: if signedIn() && (
          (get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId == request.auth.uid
            && request.resource.data.senderType == 'user'
            && request.resource.data.senderId == request.auth.uid)
          || (isAdmin() && request.resource.data.senderType == 'admin')
        );
        allow update, delete: if false;
      }
    }

    // ========================================
    // Admin Audit Logs
    // ========================================
    match /adminAuditLogs/{logId} {
      allow read, create: if isAdmin();
      allow update, delete: if false;
    }

    // ========================================
    // Partner Ticket Logs
    // ========================================
    match /partnerTicketLogs/{logId} {
      allow read: if isAdmin() || (signedIn() && resource.data.partnerId == request.auth.uid);
      allow create: if isAdmin() || (signedIn() && request.resource.data.partnerId == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // ========================================
    // Legacy chatRooms (participants[] 방식 - 사용 안 함)
    // ========================================
    match /chatRooms/{roomId} {
      allow read: if signedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      allow create: if signedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if signedIn() && request.auth.uid in resource.data.participants;
      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read: if signedIn() && (
          request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.participants || isAdmin()
        );
        allow create: if signedIn() && (
          request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.participants
        );
        allow update, delete: if false;
      }
    }

    // ========================================
    // Chats (customerId/partnerId 기반)
    // ========================================
    match /chats/{chatId} {

      // ✅ resource null 방어
      function isParticipant() {
        return resource != null &&
          (resource.data.customerId == request.auth.uid ||
           resource.data.partnerId == request.auth.uid);
      }

      allow get: if signedIn() && (isParticipant() || isAdmin());

      // 리스트는 where(customerId==uid) / where(partnerId==uid)로만 사용 전제
      allow list: if signedIn();

      allow create: if signedIn()
        && request.resource.data.keys().hasAll(['requestId','customerId','partnerId'])
        && (request.resource.data.customerId == request.auth.uid ||
            request.resource.data.partnerId == request.auth.uid)
        && get(/databases/$(database)/documents/requests/$(request.resource.data.requestId)).data.customerId
           == request.resource.data.customerId;

      allow update: if signedIn() && isParticipant()
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'customerId', 'partnerId', 'requestId', 'createdAt'
        ]);

      allow delete: if isAdmin();

      match /messages/{messageId} {
        function isChatParticipant() {
          let chatDoc = get(/databases/$(database)/documents/chats/$(chatId));
          return chatDoc.data != null &&
            (chatDoc.data.customerId == request.auth.uid || chatDoc.data.partnerId == request.auth.uid);
        }

        allow read: if signedIn() && (isChatParticipant() || isAdmin());

        allow create: if signedIn()
          && isChatParticipant()
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.keys().hasAll(['senderId', 'text', 'createdAt']);

        allow update, delete: if false;
      }
    }

match /{document=**}/quotes/{quoteId} {
  allow list: if signedIn() && (
    isAdmin() ||
    resource.data.partnerId == request.auth.uid ||
    resource.data.customerId == request.auth.uid
  );

  allow get: if signedIn() && (
    isAdmin() ||
    quoteId == request.auth.uid ||
    (resource != null && (
      resource.data.partnerId == request.auth.uid ||
      resource.data.customerId == request.auth.uid
    ))
  );
}

    // ========================================
    // Requests + Quotes
    // ========================================
    match /requests/{requestId} {

      function isRequestOwner() {
        return signedIn() &&
          get(/databases/$(database)/documents/requests/$(requestId)).data.customerId
            == request.auth.uid;
      }


      // ✅ 로그인만 하면 요청 목록/상세가 떠야
      allow read: if signedIn();

      allow create: if signedIn()
        && request.resource.data.customerId == request.auth.uid;

      // ⚠️ 현재 로직 유지 + 고객 마감/선택 허용
      allow update: if signedIn() && resource != null && (
        (
          isRequestOwner() &&
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['selectedPartnerId', 'isClosed', 'closedAt', 'updatedAt', 'reviewId', 'reviewedPartnerId'])
        ) ||
        (
          resource.data.partnerId == request.auth.uid &&
          !request.resource.data.diff(resource.data).affectedKeys().hasAny([
            'customerId', 'partnerId', 'requestId'
          ])
        )
      );

      // ========================================
      // Quotes (서브컬렉션)
      // ========================================
      match /quotes/{quoteId} {
        // Customers can read quotes under their own requests.
        // Partners can read quotes they submitted; admins can read all.
        allow list: if signedIn() && (
          isAdmin() ||
          isRequestOwner() ||
          (resource != null && (
            resource.data.partnerId == request.auth.uid ||
            resource.data.customerId == request.auth.uid
          ))
        );

        allow get: if signedIn() && (
          isAdmin() ||
          isRequestOwner() ||
          quoteId == request.auth.uid ||
          (resource != null && (
            resource.data.partnerId == request.auth.uid ||
            resource.data.customerId == request.auth.uid
          ))
        );

        // (??? /quotes/{partnerId} ???? ??)
        allow create: if signedIn() &&
          request.auth.uid == quoteId &&
          request.resource.data.partnerId == request.auth.uid &&
          request.resource.data.requestId == requestId &&
          request.resource.data.keys().hasAll([
            'requestId', 'customerId', 'partnerId', 'price', 'status', 'createdAt', 'updatedAt'
          ]);

        allow update: if signedIn() &&
          resource.data.partnerId == request.auth.uid &&
          !request.resource.data.diff(resource.data).affectedKeys().hasAny([
            'customerId', 'partnerId', 'requestId'
          ]);

        allow delete: if isAdmin();
      }
    }

    // ========================================
    // Legacy top-level quotes (사용 안 함)
    // ========================================
    match /quotes/{quoteId} {
      allow read: if signedIn() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.partnerId == request.auth.uid ||
        isAdmin()
      );
      allow create: if signedIn();
      allow update: if signedIn() && (resource.data.partnerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // ========================================
    // Notifications (flat legacy)
    // ========================================
    match /notifications/{notificationId} {
      allow read: if signedIn() && resource.data.uid == request.auth.uid;
      allow create: if signedIn();
      allow update: if signedIn() && resource.data.uid == request.auth.uid;
      allow delete: if signedIn() && resource.data.uid == request.auth.uid;
    }

    // ========================================
    // Notifications (subcollection - 실제 사용)
    // Path: notifications/{uid}/items/{itemId}
    // ========================================
    match /notifications/{uid}/items/{itemId} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if signedIn();
      allow update: if isOwner(uid);
      allow delete: if isOwner(uid) || isAdmin();
    }

    // ========================================
    // Alternative user notifications path
    // ========================================
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // ========================================
    // Reviews (customer/partner read)
    // ========================================
    match /reviews/{reviewId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.customerId == request.auth.uid;
      allow update: if (signedIn() && resource.data.customerId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();

      match /photos/{photoId} {
        allow read: if signedIn();
        allow write: if signedIn() && get(/databases/$(database)/documents/reviews/$(reviewId)).data.customerId == request.auth.uid;
      }
    }
  }
}
