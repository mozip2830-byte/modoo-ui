rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    // Partner profile photos (readable by app users, writable by owner)
    match /partners/{partnerId}/photos/{allPaths=**} {
      allow read: if signedIn()
        || firestore.get(/databases/(default)/documents/partners/$(partnerId)).data.isActive == true
        || firestore.get(/databases/(default)/documents/partnerAds/$(partnerId)).data.active == true;
      allow write: if isOwner(partnerId);
    }

    // Home banner images (public when banner is active)
    match /homeBanners/{bannerId}/{allPaths=**} {
      allow read: if signedIn()
        || firestore.get(/databases/(default)/documents/homeBanners/$(bannerId)).data.active == true;
      allow write: if isAdmin();
    }

    // Partner verification documents (owner upload, admin review)
    match /verifications/{partnerId}/{allPaths=**} {
      allow read: if isOwner(partnerId) || isAdmin();
      allow write: if isOwner(partnerId);
    }

    // Review photos (write by review owner)
    match /reviews/{reviewId}/{allPaths=**} {
      allow read: if signedIn();
      allow write: if signedIn()
        && firestore.get(/databases/(default)/documents/reviews/$(reviewId)).data.customerId
          == request.auth.uid;
    }

    // Customer profile photos
    match /customerProfiles/{customerId}/{allPaths=**} {
      allow read: if isOwner(customerId) || isAdmin();
      allow write: if isOwner(customerId);
    }

    // Quote template images
    match /quoteTemplates/{partnerId}/{allPaths=**} {
      allow read: if isOwner(partnerId) || isAdmin();
      allow write: if isOwner(partnerId);
    }

    // Chat images (participants only)
    match /chatImages/{chatId}/{allPaths=**} {
      allow read: if signedIn() && (
        isAdmin() ||
        firestore.get(/databases/(default)/documents/chats/$(chatId)).data.customerId == request.auth.uid ||
        firestore.get(/databases/(default)/documents/chats/$(chatId)).data.partnerId == request.auth.uid
      );
      allow write: if signedIn() && (
        firestore.get(/databases/(default)/documents/chats/$(chatId)).data.customerId == request.auth.uid ||
        firestore.get(/databases/(default)/documents/chats/$(chatId)).data.partnerId == request.auth.uid
      );
    }
  }
}
